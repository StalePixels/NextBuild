{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile ZXbasic",
            "type": "shell",
            "command": "python3",
            "args": [
                "./../Scripts/nextbuild.py",
                "${file}"
            ],           
            "windows": {
            "command": "./../zxbasic/python/python.exe",
            "args": [
                "./../Scripts/nextbuild.py",
                "${file}"
            ]
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
               // "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run in Cspect",
            "type": "shell",
            "command": "mono ./../Emu/CSpect/CSpect.exe -16bit -joy -brk -tv -vsync -nextrom -map=${fileDirname}/memory.txt -zxnext -fill=00 -mmc=${fileDirname}/data/ ${fileDirname}/${fileBasenameNoExtension}.nex",
            "windows":{
            "command": "./../Emu/Cspect/Cspect.exe -w3 -16bit -brk -tv -vsync -nextrom -map=${fileDirname}/memory.txt -zxnext -fill=00 -mmc=${fileDirname}/data/ ${fileDirname}/${fileBasenameNoExtension}.NEX",
            },
            "dependsOn": [
                "Compile ZXbasic"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
               // "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "startaddress",
            "description": "Start Address : ",
            "default": "24576"
        }
    ]
}
